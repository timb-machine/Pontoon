	require_once(dirname(__FILE__) . "/config.class");
	class RSSTemplate {
		var $appconfig;
		var $mysqlhandle;
		var $contenttext;
		function RSSTemplate() {
			$this->appconfig = new Config();
			$this->mysqlhandle = mysql_pconnect($this->appconfig->mysqlhostname, $this->appconfig->mysqlusername, $this->appconfig->mysqlpassword);
			mysql_select_db($this->appconfig->mysqldatabase, $this->mysqlhandle);
			if (version_compare(phpversion(), "5.1.0", ">=")) {
				date_default_timezone_set($this->appconfig->timezone);
			}
			$this->contenttext = "\n";
		}
		function RSSHeader() {
			header("Content-type: application/rss+xml");
			echo "<?xml version=\"1.0\"?>\n";
			echo "<rss version=\"2.0\">\n";
			echo "	<channel>\n";
			echo "		<link>http://" . $_SERVER["SERVER_NAME"] . "/</link>\n";
			echo "		<title>" . $this->appconfig->sitename . "/:: " . $this->appconfig->siteslogan . "</title>\n";
			echo "		<description>" . $this->appconfig->sitedescription . "</description>\n";
			echo "		<copyright>" . $this->appconfig->sitename . " Web Master, 2006 - &lt;mailto:" . $this->appconfig->sitecontact . "&gt;</copyright>\n";
		}
		function RSSBody() {
			echo $this->contenttext;
		}
		
		function RSSFooter() {
			echo "	</channel>\n";
			echo "</rss>\n";
		}
	}
?>
