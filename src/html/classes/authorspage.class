	require_once(dirname(__FILE__) . "/pagetemplate.class");
	require_once(dirname(__FILE__) . "/authorsdata.class");
	class AuthorsPage extends PageTemplate {
		function AuthorsPage($_id = -1) {
			parent::PageTemplate();
			$authorsdata = new AuthorsData($this->appconfig, $this->mysqlhandle, $this->nodename);
			$authorslist = $authorsdata->Menu();
			$authorsview = $authorsdata->View($_id);
			$this->contentmenu = $authorslist;
			$this->rssurl = $authorsview["rssurl"];
			$this->memetitle = $authorsview["memetitle"];
			$this->memedescription = $authorsview["memedescription"];
			$this->memetags = $authorsview["memetags"];
			$this->contenttext = "<p>\n";
			$this->contenttext .= "	" . $authorsview["contenttext"] . "\n";
			$this->contenttext .= "</p>\n";
			parent::PageHeader();
			parent::PageBody();
		}
	}
