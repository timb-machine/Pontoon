	class PHPData {
		var $appconfig;
		var $mysqlhandle;
		var $nodename;
		function PHPData($_appconfig, $_mysqlhandle, $_nodename) {
			$this->appconfig = $_appconfig;
			$this->mysqlhandle = $_mysqlhandle;
			$this->nodename = $_nodename;
		}
		function Menu() {
			$phpmenu = array();
			return $phpmenu;
		}
		function View() {
			if ($this->nodename == "") {
				$phpview["rssurl"] = "";
				$phpview["memetitle"] = $this->appconfig->sitename . "/" . $this->nodename . ":: " . $this->appconfig->siteslogan;
				$phpview["memedescription"] = "";
				$phpview["memetags"] = "";
				$phpview["contentphp"] = "return \"No content available.\"";
			} else {
				$phptable = mysql_query("SELECT content FROM php WHERE nodename='" . $this->nodename . "'", $this->mysqlhandle);
				if ($phprow = mysql_fetch_array($phptable, MYSQL_ASSOC)) {
					$phpview["rssurl"] = "";
					$phpview["memetitle"] = $this->appconfig->sitename . "/" . $this->nodename . ":: " . $this->appconfig->siteslogan;
					$phpview["memedescription"] = "";
					$phpview["memetags"] = "";
					$phpview["contentphp"] = $phprow["content"];
				} else {
					$phpview["rssurl"] = "";
					$phpview["memetitle"] = $this->appconfig->sitename . "/" . $this->nodename . ":: " . $this->appconfig->siteslogan;
					$phpview["memedescription"] = "";
					$phpview["memetags"] = "";
					$phpview["contentphp"] = "return \"No content available.\"";
				}
			}
			return $phpview;
		}
		function Update() {
			// TODO: not implemented yet
		}
	}
