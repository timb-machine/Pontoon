	require_once("/usr/share/php/simplepie/simplepie.inc");
	class MetaData {
		var $appconfig;
		var $mysqlhandle;
		var $nodename;
		function MetaData($_appconfig, $_mysqlhandle, $_nodename) {
			$this->appconfig = $_appconfig;
			$this->mysqlhandle = $_mysqlhandle;
			$this->nodename = $_nodename;
		}
		function Menu() {
			$textmenu = array();
			return $textmenu;
		}
		function View() {
			$metaview["rssurl"] = "";
			$metaview["memetitle"] = $this->appconfig->sitename . "/" . $this->nodename . ":: " . $this->appconfig->siteslogan;
			$metaview["memedescription"] = "";
			$metaview["memetags"] = "";
			$metaview["contenttext"] = "";
			$feedcache = new SimplePie();
			$feedcache->set_feed_url($this->appconfig->metalist);
			$feedcache->set_cache_location($this->appconfig->sitedirectoryname . "/cache");
			$feedcache->set_cache_duration(600);
			if ($feedcache->init()) {
				$feedcache->handle_content_type();
				$itemcounter = 1;
				foreach ($feedcache->get_items() as $feeditem) {
					$metaview["contenttext"] .= (($itemcounter > 1) ? "\n" : "");
					$metaview["contenttext"] .= (($itemcounter > 1) ? "</p>\n" : "");
					$metaview["contenttext"] .= (($itemcounter > 1) ? "<p>\n" : "");
					$metaview["contenttext"] .= "	<a href=\"" . $feeditem->get_feed()->get_permalink() . "\"><img src=\"" . $feeditem->get_feed()->get_favicon() . "\" alt=\"[*]\"/></a> <a href=\"" . $feeditem->get_permalink() . "\">" . $feeditem->get_title() . "</a>";
					$itemcounter ++;
				}
			} else {
				$metaview["contenttext"] = "No content available.";
			}
			return $metaview;
		}
		function Update() {
			// TODO: not implemented yet
		}
	}
