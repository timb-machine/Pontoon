	class TextData {
		var $appconfig;
		var $mysqlhandle;
		var $nodename;
		function TextData($_appconfig, $_mysqlhandle, $_nodename) {
			$this->appconfig = $_appconfig;
			$this->mysqlhandle = $_mysqlhandle;
			$this->nodename = $_nodename;
		}
		function Menu() {
			$textmenu = array();
			return $textmenu;
		}
		function View() {
			if ($this->nodename == "") {
				$textview["rssurl"] = "";
				$textview["memetitle"] = $this->appconfig->sitename . "/" . $this->nodename . ":: " . $this->appconfig->siteslogan;
				$textview["memedescription"] = "";
				$textview["memetags"] = "";
				$textview["contenttext"] = "No content available.";
			} else {
				$texttable = mysql_query("SELECT content FROM text WHERE nodename='" . $this->nodename . "'", $this->mysqlhandle);
				if ($textrow = mysql_fetch_array($texttable, MYSQL_ASSOC)) {
					$textview["rssurl"] = "";
					$textview["memetitle"] = $this->appconfig->sitename . "/" . $this->nodename . ":: " . $this->appconfig->siteslogan;
					$textview["memedescription"] = "";
					$textview["memetags"] = "";
					$textview["contenttext"] = $textrow["content"];
				} else {
					$textview["rssurl"] = "";
					$textview["memetitle"] = $this->appconfig->sitename . "/" . $this->nodename . ":: " . $this->appconfig->siteslogan;
					$textview["memedescription"] = "";
					$textview["memetags"] = "";
					$textview["contenttext"] = "No content available.";
				}
			}
			return $textview;
		}
		function Update() {
			// TODO: not implemented yet
		}
	}
