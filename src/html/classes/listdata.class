	class ListData {
		var $appconfig;
		var $mysqlhandle;
		var $nodename;
		function ListData($_appconfig, $_mysqlhandle, $_nodename) {
			$this->appconfig = $_appconfig;
			$this->mysqlhandle = $_mysqlhandle;
			$this->nodename = $_nodename;
		}
		function Menu() {
			$listmenu = array();
			return $listmenu;
		}
		function View() {
			if ($this->nodename == "") {
				$listview["rssurl"] = "";
				$listview["memetitle"] = $this->appconfig->sitename . "/" . $this->nodename . ":: " . $this->appconfig->siteslogan;
				$listview["memedescription"] = "";
				$listview["memetags"] = "";
				$listview["contenttext"] =  "No content available.";
			} else {
				$listtable = mysql_query("SELECT DISTINCT(type) FROM list WHERE nodename='" . $this->nodename . "' ORDER BY type", $this->mysqlhandle);
				if ($listrow = mysql_fetch_array($listtable, MYSQL_ASSOC)) {
					$typecounter = 1;
					$listview["rssurl"] = "";
					$listview["memetitle"] = $this->appconfig->sitename . "/" . $this->nodename . ":: " . $this->appconfig->siteslogan;
					$listview["memedescription"] = "";
					$listview["memetags"] = "";
					$listview["contenttext"] = "";
					do {
						$listview["contenttext"] .= (($typecounter > 1) ? "	" : "") . $listrow["type"] . "\n";
						$listview["contenttext"] .= "</p>\n";
						$list2table = mysql_query("SELECT content FROM list WHERE nodename='" . $this->nodename . "' AND type='" . $listrow["type"] . "' ORDER BY content", $this->mysqlhandle);
						if ($list2row = mysql_fetch_array($list2table, MYSQL_ASSOC)) {
							$listview["contenttext"] .= "<ul>\n";
							do {
								$listview["contenttext"] .= "	<li>\n";
								$listview["contenttext"] .= "		" . $list2row["content"] . "\n";
								$listview["contenttext"] .= "	</li>\n";
							} while ($list2row = mysql_fetch_array($list2table, MYSQL_ASSOC));
							$listview["contenttext"] .= "</ul>\n";
						}
						$listview["contenttext"] .= "<p>\n";
						$typecounter ++;
					} while ($listrow = mysql_fetch_array($listtable, MYSQL_ASSOC));
				} else {
					$listview["rssurl"] = "";
					$listview["memetitle"] = $this->appconfig->sitename . "/" . $this->nodename . ":: " . $this->appconfig->siteslogan;
					$listview["memedescription"] = "";
					$listview["memetags"] = "";
					$listview["contenttext"] = "No content available.";
				}
			}
			return $listview;
		}
		function Update() {
			// TODO: not implemented yet
		}
	}
